@using StrikeTrip.Models;

@model List<ForecastDay>

@{
    ViewBag.Title = "Forecast";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>10 Day Forecast &#10097 @Model[0].SpotName, @Model[0].LocationName</h2>

<div class="separate"></div>

<table class="table">
    <tr>
        <th>
            Forecast Date
        </th>
        <th>
            Average Surf Height
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @item.ForecastForDate.DayOfWeek - @item.ForecastForDate.Month/@item.ForecastForDate.Day
        </td>
        <td>
            @item.AverageSurfHeight ft
        </td>
    </tr>
}

</table>
